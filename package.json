{
  "name": "@cvent/datadog-backstage-plugins",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "20 || 22"
  },
  "scripts": {
    "start": "backstage-cli repo start",
    "build:backend": "yarn workspace backend build",
    "build:all": "backstage-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "test:e2e": "playwright test",
    "fix": "backstage-cli repo fix",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "config:check": "backstage-cli config:check --strict",
    "prettier:check": "prettier --check .",
    "deprecations": "backstage-cli repo list-deprecations",
    "spellcheck": "cspell --gitignore '**/*.{tsx,ts,yaml,md}'",
    "verify": "yarn clean && yarn spellcheck --no-progress && yarn lint:all && yarn config:check && yarn tsc && yarn deprecations && yarn test:all && yarn knip && yarn clean && echo 'ğŸ’™ - verified - ğŸ’™'",
    "new": "backstage-cli new"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.32.0",
    "@backstage/e2e-test-utils": "^0.1.1",
    "@playwright/test": "^1.51.1",
    "cspell": "^8.18.1",
    "eslint-plugin-prettier": "^5.2.6",
    "jest-canvas-mock": "^2.5.2",
    "knip": "^5.50.4",
    "node-gyp": "^10.3.1",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3"
  },
  "resolutions": {
    "jsonpath-plus": ">=10",
    "koa": ">=2",
    "tough-cookie": ">=5.1.2",
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "prettier": "@backstage/cli/config/prettier",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ]
  },
  "packageManager": "yarn@4.9.1"
}
